    data modify storage asset:artifact Lore set value ['{"text":"とある神が協力をして作り上げた神器 "}','{"text":"しかし、お互い馬が合わなかったのか "}','[{"text":"少し"},{"text":"歪な性能","color":"gray","italic":true},{"text":"をしている"}]','{"text":" "}','{"text":"弾が入っていない","bold":true,"underlined":true}']
