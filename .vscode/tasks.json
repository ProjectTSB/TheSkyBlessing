{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Update Resourcepack sha1",
            "type": "shell",
            "command": "sed -e \"s/^resource-pack-sha1=.*$/resource-pack-sha1=$(curl -L https://github.com/ProjectTSB/TSB-ResourcePack/releases/download/dev/resources.zip | sha1sum | tr ' ' '\t' | cut -f1)/\" -i ./server.properties",
            "options": {
                "cwd": "../../"
            },
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Open SkyBlock Server",
            "type": "shell",
            "command": "java -Xms2G -Xmx4G -Dlog4j2.formatMsgNoLookups=true -jar ./server.jar nogui",
            "options": {
                "cwd": "../../"
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "dependsOn": [
                "Update Resourcepack sha1"
            ],
            "promptOnClose": true,
            "problemMatcher": []
        }
    ]
}