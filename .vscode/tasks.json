{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "change world file",
            "type": "shell",
            "command": "sed -i -e \"s/^level-name=.*$/level-name=The SkyBlock/\" ./server.properties",
            "options": {
                "cwd": "../../"
            },
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Open SkyBlock Server",
            "type": "shell",
            "command": "java -Xms2G -Xmx4G -jar ./server.jar nogui",
            "options": {
                "cwd": "../../"
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "dependsOn": [
                "change world file"
            ],
            "promptOnClose": true,
            "problemMatcher": []
        }
    ]
}